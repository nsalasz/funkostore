@model funkostore.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}
<center>
    <h1>Detalle del producto</h1>
    
    <div class="container" >
            <div class="col-sm-4">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="card-img-actions">
                    <center>
                    <img class="img-responsive" width="100%" height="210"
                       src="/images/@Html.DisplayFor(model => model.ImageName)" alt="@Html.DisplayFor(model => model.ImageName)"  />
                    </center>
                  </div>
                </div>
                <div class="card-body">
                  <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
                  <p class="card-text">@Html.DisplayFor(model => model.Descripcion)</p>
                  <h5 class="card-title">@Html.DisplayFor(model => model.Precio)</h5>
                  <a class="btn btn-primary" asp-action="Add" asp-route-id="Id"><img src="https://img.icons8.com/metro/512/add-shopping-cart.png" width="25" height="22"/> Agregar</a>
                </div>
              </div>
            </div>
    </div>
    </center>
    <div class="text-center">
        <a asp-action="Index">Regresar</a>
    </div> 